<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/circle_bg.xml
     Background berbentuk lingkaran + ripple (API 21+).
     Warna latar menggunakan ?attr/colorPrimary (ubah sesuai tema).
-->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?attr/colorControlHighlight">

    <!-- item utama: bentuk oval -->
    <item>
        <shape android:shape="oval">
            <solid android:color="?attr/colorPrimary" />
            <!-- ukuran default optional, biasanya ditentukan dari layout -->
            <size android:width="48dp" android:height="48dp" />
        </shape>
    </item>
</ripple>
