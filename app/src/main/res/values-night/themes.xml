<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.UniTrade" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccentDark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/colorAppBackgroundDark_night</item>
        <item name="colorSurface">@color/colorSurfaceDark_night</item>
        <item name="colorOnSurface">@color/textPrimaryDark_night</item>
        <item name="colorOnBackground">@color/textPrimaryDark_night</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Status bar & Navigation bar (dark) -->
        <item name="android:statusBarColor">@color/colorAppBackgroundDark_night</item>
        <item name="android:navigationBarColor">@color/colorSurfaceDark_night</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/textPrimaryDark_night</item>
        <item name="android:textColorSecondary">@color/textSecondaryDark_night</item>
        <item name="android:textColorHint">@color/textMutedDark_night</item>
        
        <!-- Elevation overlay for Material3 dark theme -->
        <item name="elevationOverlayEnabled">true</item>
        <item name="elevationOverlayColor">@color/white</item>
    </style>
</resources>