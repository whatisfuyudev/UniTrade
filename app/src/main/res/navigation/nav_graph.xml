<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <!-- Splash -->
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.unitrade.unitrade.SplashFragment"
        android:label="Splash" >
        <action android:id="@+id/action_splash_to_onboarding" app:destination="@id/onboardingFragment" />
        <action android:id="@+id/action_splash_to_main" app:destination="@id/main_nav" />
    </fragment>

    <!-- Onboarding -->
    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.unitrade.unitrade.OnboardingFragment"
        android:label="Onboarding">
        <action
            android:id="@+id/action_onboarding_to_main"
            app:destination="@id/main_nav"
            app:popUpTo="@id/onboardingFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <!-- Auth -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.unitrade.unitrade.LoginFragment"
        android:label="Login">
        <action android:id="@+id/action_login_to_register" app:destination="@id/registerFragment"/>
        <action android:id="@+id/action_login_to_main" app:destination="@id/main_nav"/>
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.unitrade.unitrade.RegisterFragment"
        android:label="Register" >
        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_register_to_main"
            app:destination="@id/main_nav" />
    </fragment>

    <!-- Main nested navigation -->
    <navigation
        android:id="@+id/main_nav"
        app:startDestination="@id/homeFragment">

        <fragment
            android:id="@+id/homeFragment"
            android:name="com.unitrade.unitrade.HomeFragment"
            android:label="Home" >
            <action
                android:id="@+id/action_home_to_search"
                app:destination="@id/searchFragment" />
            <!-- ubah fungsi action di homeFragment -->
            <action
                android:id="@+id/action_home_to_addProduct"
                app:destination="@id/addEditProductFragment" />
            <action
                android:id="@+id/action_home_to_productDetail"
                app:destination="@id/productDetailFragment">
                <argument android:name="productId" app:argType="string" />
            </action>
            <!-- optional: quick link from home to chat list -->
            <action
                android:id="@+id/action_home_to_chatList"
                app:destination="@id/chatListFragment" />
            <!-- AI Chatbot -->
            <action
                android:id="@+id/action_home_to_aiChatbot"
                app:destination="@id/aiChatbotFragment" />
        </fragment>

        <fragment
            android:id="@+id/productListFragment"
            android:name="com.unitrade.unitrade.ProductListFragment"
            android:label="Products" >
            <action
                android:id="@+id/action_productList_to_productDetail"
                app:destination="@id/productDetailFragment">
                <argument android:name="productId" app:argType="string" />
            </action>
        </fragment>

        <fragment
            android:id="@+id/productDetailFragment"
            android:name="com.unitrade.unitrade.ProductDetailFragment"
            android:label="ProductDetail" >
            <argument android:name="productId" app:argType="string" android:defaultValue="" />
        </fragment>

        <!-- Chat: list of threads -->
        <fragment
            android:id="@+id/chatListFragment"
            android:name="com.unitrade.unitrade.ChatListFragment"
            android:label="ChatList" >
            <action
                android:id="@+id/action_chatList_to_chatDetail"
                app:destination="@id/chatDetailFragment">
                <argument android:name="chatId" app:argType="string" />
            </action>
        </fragment>

        <!-- Chat detail: single chat thread, arg chatId -->
        <fragment
            android:id="@+id/chatDetailFragment"
            android:name="com.unitrade.unitrade.ChatDetailFragment"
            android:label="ChatDetail" >
            <argument android:name="chatId" app:argType="string" android:defaultValue="" />
        </fragment>

        <!-- Profile (point to new package path) -->
        <fragment
            android:id="@+id/profileFragment"
            android:name="com.unitrade.unitrade.ProfileFragment"
            android:label="Profile" >
            <!-- new actions requested by you -->
            <action
                android:id="@+id/action_profile_to_editProfile"
                app:destination="@id/editProfileFragment" />
            <action
                android:id="@+id/action_profile_to_favoritesFragment"
                app:destination="@id/favoritesFragment" />
            <action
                android:id="@+id/action_profile_to_myProductsFragment"
                app:destination="@id/myProductsFragment" />
            <action
                android:id="@+id/action_profile_to_chatListFragment"
                app:destination="@id/chatListFragment" />
            <action
                android:id="@+id/action_profile_to_login"
                app:destination="@id/loginFragment" />
            <!-- keep older chatDetail action if you still need it -->
            <action
                android:id="@+id/action_profile_to_chatDetail"
                app:destination="@id/chatDetailFragment">
                <argument android:name="chatId" app:argType="string" />
            </action>
            <!-- AI Chatbot -->
            <action
                android:id="@+id/action_profile_to_aiChatbot"
                app:destination="@id/aiChatbotFragment" />
        </fragment>

        <!-- Add/Edit product fragment -->
        <fragment
            android:id="@+id/addEditProductFragment"
            android:name="com.unitrade.unitrade.AddEditProductFragment"
            android:label="Add/Edit Product" />

        <!-- placeholders for profile-related destinations -->
        <!-- If you already implemented these fragments, replace android:name with your actual class path -->
        <fragment
            android:id="@+id/editProfileFragment"
            android:name="com.unitrade.unitrade.EditProfileFragment"
            android:label="EditProfile" />

        <fragment
            android:id="@+id/favoritesFragment"
            android:name="com.unitrade.unitrade.FavoritesFragment"
            android:label="Favorites" />

        <fragment
            android:id="@+id/searchFragment"
            android:name="com.unitrade.unitrade.SearchFragment"
            android:label="Search" />

        <fragment
            android:id="@+id/myProductsFragment"
            android:name="com.unitrade.unitrade.MyProductsFragment"
            android:label="MyProducts" />

        <!-- AI Chatbot Fragment -->
        <fragment
            android:id="@+id/aiChatbotFragment"
            android:name="com.unitrade.unitrade.AIChatbotFragment"
            android:label="FAQ Assistant" />

        <!-- Tambahkan fragment lain di sini sesuai kebutuhan -->
    </navigation>
</navigation>
