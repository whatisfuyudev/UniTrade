<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/item_chat_message_out.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:orientation="horizontal"
    android:gravity="end">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="4dp"
            android:padding="8dp"
            app:cardBackgroundColor="?attr/colorPrimary">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMessageTextOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pesan saya"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:visibility="gone"
                    android:padding="4dp"/>

                <ImageView
                    android:id="@+id/imgMessageOut"
                    android:layout_width="220dp"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:visibility="gone"
                    android:contentDescription="Gambar pesan" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvTimeOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:35"
            android:textSize="12sp"
            android:alpha="0.7"
            android:layout_marginEnd="4dp"/>
    </LinearLayout>

    <!-- optional avatar on right (or hide) -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgAvatarRight"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/placeholder"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/CircleImageView"
        android:contentDescription="Avatar" />
</LinearLayout>
