<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Image pager (multiple images) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/white">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vpImages"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- Back icon -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="12dp"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/ic_arrow_back"
                app:tint="@android:color/white"
                android:layout_gravity="top|start" />

        </FrameLayout>

        <!-- Card style details -->
        <com.google.android.material.card.MaterialCardView
            android:layout_marginTop="-24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Judul Produk"
                        style="?attr/textAppearanceHeadlineSmall" />

                    <ImageButton
                        android:id="@+id/btnFavorite"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@null"
                        android:src="@drawable/ic_favorite_border"
                        android:contentDescription="Simpan favorit" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 0"
                    android:textStyle="bold"
                    style="?attr/textAppearanceBodyLarge"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvCondition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Like New"
                    android:layout_marginTop="6dp"
                    style="?attr/textAppearanceLabelMedium"/>

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deskripsi produk..."
                    android:layout_marginTop="12dp"
                    android:ellipsize="end"
                    android:maxLines="6" />

                <!-- Seller info: avatar + name/faculty/contact -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp">

                    <ImageView
                        android:id="@+id/imgSellerAvatar"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/placeholder"
                        android:scaleType="centerCrop"
                        android:contentDescription="Foto penjual"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/circle_bg" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tvSellerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama Penjual"
                            style="?attr/textAppearanceBodyLarge" />

                        <TextView
                            android:id="@+id/tvSellerFaculty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fakultas"
                            style="?attr/textAppearanceBodySmall" />

                        <TextView
                            android:id="@+id/tvSellerContact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kontak"
                            style="?attr/textAppearanceLabelSmall" />
                    </LinearLayout>

                    <!-- action (Barter / Jual Beli) -->
                    <TextView
                        android:id="@+id/tvAction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jual Beli"
                        android:padding="6dp"
                        android:background="@drawable/chip_bg"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <!-- Action button: Chat (primary) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnChatSeller"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:backgroundTint="@color/btnOrange"
                        android:text="Chat Penjual" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
